{{!< default}}

{{>header}}

<div class="cover" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
	<div class="titles">
		<h1>{{@blog.description}}</h1>
	</div>
</div>

<div class="wrap">

	{{#foreach posts}}
	 <article class="{{post_class}}">
		<section class="post-excerpt">
			<h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
			<p>{{excerpt}}&hellip;</p>
		</section>
		<section class="post-footer post-meta">
		<ul class="details">
			<li><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></li>  
			<li>
				{{#if tags}}{{tags}}{{/if}}
			</li>
		</ul> 
		</section>
	</article>
	{{/foreach}}

	{{pagination}}
	
</div>