{{!< default}}

<header id="js-hero" class="site-header hero spacer {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}" role="banner">

    <nav class="site-nav">
        {{#if @blog.logo}}<a class="site-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        <a class="subscribe-btn btn" href="{{@blog.url}}/rss/">Subscribe</a>
    </nav>

    <div id="js-hero__text" class="hero__text central spacer">
        <h1 class="hero__title">{{@blog.title}}</h1>
        <p class="hero__desc">{{@blog.description}}</p>
    </div>

</header>

<main id="content" class="wrapper" role="main">
    {{> "loop"}}
</main>
